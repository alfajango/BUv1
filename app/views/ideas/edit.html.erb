<%# ideas/edit.html.erb %>
<div class="wrapper body">
  <div class="col-sm-6 col-sm-offset-3">
    <% provide(:title, 'Edit idea') %>
    <h1>Edit idea</h1>

    <%#= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= form_for(@idea) do |f| %>
    <%# todo: put error message rendering here %>
    <p><%= f.label "Edit idea:"%><br />
    <%= f.text_field :body %></p>
      <div><%= f.submit "Update", class: "btn btn-primary"%></div> <%# calls update method in ideass_controller? %>
    <% end %>
    <br />
    <br />
    <% if current_user === (@idea.user) %>
      <h2> or </h2>
      <h1>Delete Idea</h1>
    <%= link_to "delete", @idea, method: :delete,
                                     data: { confirm: "Are you sure you want to delete the idea?  All feedback will be lost" },
                                     title: @idea.body, class: "btn btn-danger"%>
<% end %>
    </br></br></br>
    <%= link_to "Back", :back %>
  </div>
</div>