

<div class="modal fade" id="newProjectModal" tabindex="-1" role="dialog" aria-labelledby="newProjectLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">

        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="newProjectLabel">Add a new project, strategy, or effort that your company is working on</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@project) do |f| %>
          <%#= render 'shared/error_messages', object: f.object %>
          <h4>Create a new project.  Enter project name:</h4>
          <%= f.text_field :name %>
          <br>
          Your name will be shown as the creator of the project.  All feedback given will be anonymous.<br>
          <%= f.hidden_field :company_id, :value => current_user.company.id %><br>
          <%= f.submit "Create the project", class: "btn btn-large btn-primary" %>
        <% end %>
      </div>  
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>  
</div> 
